generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(uuid()) // Unique identifier
  email           String?   @unique // Optional for MetaMask-only users
  username        String? // Optional username
  metamaskAddress String?   @unique // MetaMask wallet public address
  createdAt       DateTime  @default(now()) // Auto-generated timestamp
  updatedAt       DateTime  @updatedAt // Auto-updated timestamp
  sessions        Session[] // Relation to sessions (optional, for login tracking)
}

model Session {
  id        String   @id @default(uuid()) // Unique identifier for each session
  userId    String   @map("user_id") // Foreign key to User
  createdAt DateTime @default(now()) // Auto-generated session start time
  user      User     @relation(fields: [userId], references: [id]) // Relation field
}
